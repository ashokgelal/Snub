platform :osx, '10.10'
use_frameworks!

workspace 'Snub.xcworkspace'

xcodeproj 'SnubCore/SnubCore.xcodeproj'
target 'SnubCore' do
    pod 'CocoaLumberjack/Swift', :git => 'https://github.com/CocoaLumberjack/CocoaLumberjack.git', :tag => '2.1.0-beta'
    pod 'PDKTZipArchive', :git => 'https://github.com/ashokgelal/PDKTZipArchive'
    pod 'SwiftRegExp', '~> 1.3'
end

target 'Snub' do
    xcodeproj 'Snub/Snub.xcodeproj'
    pod 'CocoaLumberjack/Swift', :git => 'https://github.com/CocoaLumberjack/CocoaLumberjack.git', :tag => '2.1.0-beta'
    pod 'PDKTZipArchive', :git => 'https://github.com/ashokgelal/PDKTZipArchive'
    pod 'Async', :git => 'https://github.com/JohnCoates/Async.git'
    pod 'FuzzySearch', :git => 'https://github.com/ashokgelal/FuzzySearch'
    pod 'SwiftRegExp', '~> 1.3'
    pod 'Sparkle', '~> 1.10'
end

